{% set logdir=salt['pillar.get']('nginx:access_log_dir','/var/log/nginx') -%}
{{logdir}}/*.log {
        daily
        missingok
        rotate 52
        compress
        delaycompress
        notifempty
        create 640 nginx adm
        sharedscripts
        postrotate
                [ -f /var/run/nginx.pid ] && kill -USR1 `cat /var/run/nginx.pid`
        endscript
}

